  "servers": [
    {
      "url": "http://localhost:4000"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT authentication using Bearer token"
      }
    }
  },
  "tags": [
    {
      "name": "Auth",
      "description": "All routes about user auth"
    },
    {
      "name": "Users",
      "description": "All routes about users"
    },
    {
      "name": "Categories",
      "description": "All routes about categories"
