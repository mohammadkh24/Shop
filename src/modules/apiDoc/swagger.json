  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Register New User",
        "description": "This method is used to register new users in the system.",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "علی رضایی"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "ali@example.com"
                  },
                  "phone": {
                    "type": "string",
                    "example": "09121234567"
                  },
                  "password": {
                    "type": "string",
                    "example": "123456"
                  },
                  "role": {
                    "type": "string",
                    "enum": ["USER", "ADMIN", "DOCTOR"],
                    "example": "USER"
                  }
                },
                "required": ["name", "email", "phone", "password"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "ثبت‌نام موفقیت‌آمیز بود",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "ثبت نام با موفقیت انجام شد"
                    },
                    "user": {
                      "type": "object",
                      "properties": {
                        "_id": {
                          "type": "string",
                          "example": "65f8c2e8d6f3a1b7e9a4f4c2"
                        },
                        "name": { "type": "string", "example": "علی رضایی" },
                        "email": {
                          "type": "string",
                          "example": "ali@example.com"
                        },
                        "phone": {
                          "type": "string",
                          "example": "09121234567"
                        },
                        "role": { "type": "string", "example": "USER" }
                      }
                    },
                    "accessToken": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1..."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "خطا در ثبت‌نام",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "کاربر با این شماره موبایل یا ایمیل قبلا ثبت نام کرده"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "Login User",
        "description": "This method allows users to log in by providing their phone number and password, and it returns a JWT access token.",
        "tags": ["Auth"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "phone": {
                    "type": "string",
                    "example": "09121234567",
                    "description": "شماره موبایل کاربر"
                  },
                  "password": {
                    "type": "string",
                    "example": "123456",
                    "description": "رمز عبور کاربر"
                  }
                },
                "required": ["phone", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "ورود موفقیت‌آمیز و دریافت توکن JWT",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "ورود با موفقیت انجام شد"
                    },
                    "accessToken": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR..."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "خطا در وارد کردن شماره موبایل یا رمز عبور نادرست",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "شماره موبایل یا رمز عبور صحیح نیست"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "کاربر با این شماره موبایل یافت نشد",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "کاربر با این شماره موبایل پیدا نشد"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
